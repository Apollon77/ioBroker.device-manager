// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": false,
        "lib": ["es2018", "DOM"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["@iobroker/types"],                           /* Type declaration files to be included in compilation. */
        // Support React - both must be here because parcel v1 does not
        // evaluate the "extends" option
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": ["./**/*.ts", "./**/*.tsx", "../src/lib/adapter-config.d.ts"],
    "exclude": ["./**/*.test.ts", "./**/*.test.tsx"]
}
